		"@types/node": "^22.9.0",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"lint-staged": "^16.2.7",
		"rimraf": "^5.0.10",
		"ts-jest": "^29.2.5",
		"typescript": "^5.9.3"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
